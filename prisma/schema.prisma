generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      =  env("DATABASE_URL")
}

model User {
  id          Int       @id @default(autoincrement())
  username    String    @unique
  password    String    @unique
  class       Int
  role        Role

  marks       Mark[]
  score       Score[]
}

enum Role {
  TEACHER
  STUDENT
}

model Mark {
  id        Int      @id @default(autoincrement())
  subject   String
  mark     String
  student   User     @relation(fields: [studentId], references: [id]) 
  studentId Int
}

model Score {
  id        Int      @id @default(autoincrement())
  studentId  Int
  student   User     @relation(fields: [studentId], references: [id]) 
  score     Int
}